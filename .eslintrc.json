{
    "extends": "next/core-web-vitals",
    "rules": {
        "array-bracket-newline": [
            "error",
            {
                "multiline": true,
                "minItems": 2
            }
        ],
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "array-callback-return": "error",
        "arrow-body-style": [
            "error",
            "always"
        ],
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "operator-linebreak": [
            "error",
            "before"
        ],
        "consistent-return": "error",
        "curly": "error",
        "function-call-argument-newline": [
            "error",
            "always"
        ],
        "function-paren-newline": [
            "error",
            {
                "minItems": 1
            }
        ],
        "getter-return": "error",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "multiline-ternary": [
            "error",
            "always"
        ],
        "no-dupe-else-if": "error",
        "no-dupe-args": "error",
        "no-else-return": [
            "error",
            {
                "allowElseIf": false
            }
        ],
        "no-unreachable": "error",
        "object-curly-newline": [
            "error",
            {
                "minProperties": 2
            }
        ],
        "object-property-newline": "error",
        "template-tag-spacing": [
            "error",
            "always"
        ]
    }
}